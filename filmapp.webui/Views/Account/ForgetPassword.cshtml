@if(TempData["message"]!=null)
{
    <script >
    alertify.alert('Movie App','@TempData["message"]');
    </script>

}
<h1 class="text-white h3">Şifremi Unuttum</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <form class="text-white" asp-controller="Account" asp-action="ForgetPassword" method="POST">
            <div class="form-group row">
                <label class="text-white col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-5">
                <input class="form-control" type="email" name="Email">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-sm btn-outline-secondary">Mail Gönder</button>
                </div>
                <div class="col-sm-10 offset-sm-2 mt-2">
                <a class="text-white" href="~/Account/Login">Giriş Yap</a>
                </div>
            </div>
        
        </form>
    </div>
</div>