@model filmapp.webui.Models.LoginModel
@if(TempData["message"]!=null)
{
    <script >
    alertify.alert('Movie App','@TempData["message"]');
    </script>

}
<h1 class="text-white h3">Giriş Yap</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <form class="text-white" asp-controller="Account" asp-action="Login" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
            <div class="form-group row">
                <label asp-for="Email" class="text-white col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-5">
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="Password" class="text-white col-sm-2 col-form-label">Parola:</label>
                <div class="col-sm-5">
                <input class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div> 
             

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-sm btn-outline-secondary">Giriş Yap</button>                    
                </div>
                <div class="col-sm-10 offset-sm-2 mt-2">
                <a class="text-white" href="~/Account/Register">Kayıt Ol</a>
                </br>   
                <a class="text-white" href="~/Account/Forgetpassword">Şifremi Unuttum</a>
                </div>
            </div>
        
        </form>
    </div>
</div>
@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>    
}