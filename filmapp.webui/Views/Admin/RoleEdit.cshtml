@model filmapp.webui.Models.RoleDetails
<h1 class="text-white h3">Rol Düzenle</h1>
<hr>
<div class="row">
    <div class="col-md-4">

        <form asp-controller="Admin" asp-action="RoleEdit">
            <input type="hidden" name="RoleId" value="@Model.Role.Id">
            <input type="hidden" name="RoleName" value="@Model.Role.Name">
            <h6 class="bg-info text-white p-1">@Model.Role.Name Rolüne Ekle</h6>
            <table class="table table-bordered table-sm text-white">
                @if(Model.NonMembers.Count()==0)
                {
                    <tr>
                        <td colspan="2">Bütün kullanıcılar bu role ait.</td>
                    </tr>
                }
                else
                {
                    @foreach (var user in Model.NonMembers)
                    {
                        <tr>
                            <td>@user.UserName</td>
                             <td style="width: 20px;">
                                <input type="checkbox" name="IdsToAdd" value="@user.Id">
                            </td>
                        </tr>
                    }  
                }
            </table>
            <hr>
            <h6 class="bg-info text-white p-1">@Model.Role.Name Rolünden Çıkart</h6>
            <table class="table table-bordered table-sm text-white">
                @if(Model.Members.Count()==0)
                {
                    <tr>
                        <td colspan="2">Role ait Kullanıcı Yok</td>
                    </tr>
                }
                else
                {
                    @foreach (var user in Model.Members)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td style="width: 20px;">
                                <input type="checkbox" name="IdsToDelete" value="@user.Id">
                            </td>
                        </tr>
                    }  
                }
            </table>
            <div class="form-group row">
                <div class="col-sm-10 ">
                    <a href="~/Admin/RoleList" class="btn btn-sm btn-outline-secondary">Geri</a>
                    <button type="submit" class="btn btn-sm btn-outline-secondary">Değişiklikleri Kaydet</button>
                </div>
            </div>
        </form>



    </div>
</div>